<form class="empyrean flexcol spaced">
    <div class="form-group">
    <label>{{localize "empyrean.edge"}}</label>
    <div class="form-fields">
      <select id="edge" name="edge" class="corners">
          {{selectOptions edgeOptions selected=edge blank=(localize "empyrean.none")}}
      </select>
    </div>
  </div>
    <div class="form-group">
    <label>{{localize "empyrean.skillLanguage"}}</label>
    <div class="form-fields">
      <select id="skillLanguage" name="skillLanguage" class="corners">
        <option value="">{{localize "empyrean.none"}}</option>
        {{{selectOptGroup skillOptions selected=skillLanguage label=(localize "empyrean.skill")}}}
        {{{selectOptGroup languageOptions selected=skillLanguage label=(localize "empyrean.language")}}}
      </select>
    </div>
  </div>

  
  <div class="form-group">
    <label>{{localize "empyrean.advantage"}}</label>
    <div class="form-fields">
      <select id="advantage" name="advantage" class="corners">
      {{selectOptions advantageOptions selected=advantage}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "empyrean.cut"}}</label>
    <div class="form-fields">
      <input id="cut" name="cut" type="number" min="0" placeholder="0" value="{{cut}}" />
    </div>
  </div>

  <div class="flexrow spaced">
    <div class="center">
      <a class="block corners mid padded submit">Submit</a>
    </div>
    
    <div class="center">
      <a class="block cancel corners light padded">Cancel</a>
    </div>
  </div>
</form>
