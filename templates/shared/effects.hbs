<div id="effects" class="flex0">
  <div class="">
    <blockquote class="red">
      <h3>{{localize "empyrean.WARNINGS.effectDeprecationTitle"}}</h3>
      <p>{{localize "empyrean.WARNINGS.effectDeprecationBody"}}</p>
    </blockquote>
    <table>
      <thead>
        <tr>
          <th>{{localize "empyrean.effects"}}</th>
          <th class="right">
            <a class="addItem" data-item-type="effects">
              <i class="fas fa-plus"></i>
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
        {{#if (any effects)}}
          {{#each effects as |effect|}}
            <tr>
              <td>
                <a class="editEffect" data-effect-id="{{effect.id}}">{{effect.name}}</a>
              </td>
              <td class="right">
                <a class="deleteEffect" data-effect-id="{{effect.id}}"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td class="center" colspan="2">
              {{localize "empyrean.none"}}
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
