<div id="aspect" class="flex0">
    <h2 class="corners dark">
    {{title}}
    <a class="addItem" data-item-type="{{type}}">
      <i class="fas fa-plus"></i>
    </a>
    </h2>
    {{#if (any aspects)}}
    <div class="flexcol spaced item-list">
      {{#each aspects as |aspect|}}
            {{> "systems/empyrean/templates/shared/wound.hbs" aspect id=aspect.id type=type}}
      {{/each}}         
   </div>
    {{else}}
    <p class="center corners light-transparent padded">{{localize "empyrean.none"}}</p>
    {{/if}}
</div>
