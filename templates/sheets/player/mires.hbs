<div id="mires" class="flex0">
  <h2 class="corners dark">
    {{localize "empyrean.mires"}}
    <a class="addItem" data-item-type="{{type}}">
      <i class="fas fa-plus"></i>
    </a>
  </h2>
  {{#if (any system.mires)}}
    <div class="flexcol spaced slim-list">
      {{#each system.mires as |mire|}}
        {{> "systems/empyrean/templates/sheets/player/mire.hbs" mire type="mires"}}
      {{/each}}
    </div>
  {{else}}
    <p class="center corners light-transparent padded">{{localize "empyrean.none"}}</p>
  {{/if}}
</div>
