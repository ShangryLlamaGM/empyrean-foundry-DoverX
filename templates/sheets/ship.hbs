<form class="empyrean">
  <div class="flexrow spaced">
    <div class="flexcol spaced">
      <div class="flex flex0 flexrow spaced">
        <div class="flex0 img"><img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" /></div>
        <div>
          <input id="name" class="corners" type="text" name="name" value="{{actor.name}}" placeholder="{{localize "empyrean.name"}}" />
        </div>
      </div>
      
      {{> "systems/empyrean/templates/sheets/ship/ratings.hbs"}}
      {{> "systems/empyrean/templates/sheets/ship/designs.hbs"}}

    </div>
    <div class="flexcol spaced">
      {{> "systems/empyrean/templates/sheets/ship/fittings.hbs"}}
      {{> "systems/empyrean/templates/shared/aspects.hbs"
        aspects=system.undercrew
        title=(localize "empyrean.undercrew")
        type="undercrew"}}
    </div>
    <div class="flexcol spaced">
      <div class="flex0">
        <div class="flexrow corners">
          <div class="mid padded title uppercase text-lg">{{localize "empyrean.stakes"}}</div>
          <div class="center padded text-lg light-transparent">{{stakesUsed}}</div>
        </div>
      </div>
      {{> "systems/empyrean/templates/sheets/ship/conditions.hbs"}}
      {{> "systems/empyrean/templates/sheets/ship/reputations.hbs"}}
      {{> "systems/empyrean/templates/sheets/ship/cargo.hbs"}}
    </div>

  </div>
</form>
