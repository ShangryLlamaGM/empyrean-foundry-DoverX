<div id="cargoPassenger" class="flex0">
  <h2 class="corners dark">
    {{localize "empyrean.cargoPassengers"}}
    <a class="addItem" data-item-type="cargoPassengers">
      <i class="fas fa-plus"></i>
    </a>
  </h2>
  {{#if (any system.cargoPassengers)}}
    <div class="flexcol slim-list spaced">
      {{#each system.cargoPassengers as |cargoPassenger|}}
        {{> "systems/empyrean/templates/shared/slim_item.hbs" cargoPassenger type="cargoPassengers"}}
      {{/each}}
    </div>
  {{else}}
    <p class="center corners light-transparent padded">{{localize "empyrean.none"}}</p>
  {{/if}}
</div>
