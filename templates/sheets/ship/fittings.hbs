<div id="fittings" class="flex0">
  <h2 class="corners dark">
    {{localize "empyrean.fittings"}}
    <a class="addItem" data-item-type="fittings">
      <i class="fas fa-plus"></i>
    </a>
  </h2>
  {{#if (any system.fittings)}}
    <div class="flexcol item-list spaced padded-x">
      {{#each system.fittings as |fitting|}}
        {{> "systems/empyrean/templates/sheets/ship/design.hbs" fitting id=fitting.id type="fitting"}}
      {{/each}}
    </div>
  {{else}}
    <p class="center corners light-transparent padded">{{localize "empyrean.none"}}</p>
  {{/if}}
</div>
