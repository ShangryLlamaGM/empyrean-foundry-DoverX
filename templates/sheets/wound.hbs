<form class="empyrean">
  <div class="flexcol spaced">
    <div id="header" class="flexrow spaced">
      <div class="flexrow spaced">
        <div class="flex0 img"><img src="{{item.img}}" data-edit="img" title="{{item.name}}" /></div>
        <div class="flexcol spaced">
          <input id="name" class="corners" type="text" name="name" value="{{item.name}}" placeholder="{{localize "empyrean.name"}}" />
          <div class="flexrow spaced">
            {{> "systems/empyrean/templates/shared/text_field.hbs" field="system.type" value=system.type label="empyrean.type"}}
            {{> "systems/empyrean/templates/shared/number_field.hbs" field="system.track.max" value=system.track.max label="empyrean.track" min=0 max=6}}
          </div>
        </div>
      </div>
    </div>

    <div id="body">
      <h3 class="corners mid">{{localize "empyrean.details"}}</h3>
      {{> "systems/empyrean/templates/shared/description.hbs" content=system.enrichedDetails target="system.details"}}
    </div>
  </div>
</form>